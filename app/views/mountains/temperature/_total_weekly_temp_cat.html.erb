<table data-toggle='table' data-sort-name="total-temp" data-sort-order="desc" data-search='true' class="table table-hover table-bordered total-temp">
	<caption class='total-temp'><h3>Temperature Totals over 16 day period (F˚) - <small>(<%= Days.display_all(forecasts.first.second) %>)</small></h3></caption>
	  <thead>
	    <tr>
	    	<th data-field="total-mountain" data-sortable="true">Total Mountain <%= category %></th>
	    	<th data-field="total-state" data-sortable="true">State</th>
	      <th data-field="temp-high" data-sortable="true" data-sorter="totalSorter">High <small>(w1,w2)</small></th>
	      <th data-field="temp-low" data-sortable="true" data-sorter="totalSorter">Low <small>(w1,w2)</small></th>
	      <th data-field="temp-avg" data-sortable="true" data-sorter="totalSorter">Average <small>(w1,w2)</small></th>
	    </tr>
	  </thead>
	  <tbody>
			<% forecasts.each do |mountain1, forecast| %>
		    <tr class='total-temp'>
		    	<% mountain = Mountain.find_by(city: mountain1) %>
		      <td><%= link_to mountain.city, mountain_path(mountain.id) %></td>
		      <td><%= mountain.state.name %></td>
		      <td><%= Total.temp_high(forecast) %><small> F˚</small></td>
		      <td><%= Total.temp_low(forecast) %><small> F˚</small></td>
		      <td><%= Total.temp_avg(forecast) %><small> F˚</small></td>
		    </tr>
			<% end %>
	  </tbody>
</table>
