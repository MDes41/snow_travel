<table data-toggle='table' data-search='true' data-show-columns='true' class="table table-hover table-bordered week1">
	<caption class='temperature'>Temperature Totals (F˚)</caption>
	  <thead>
	    <tr>
	      <%= render partial: 'mountains/day_category', locals: { forecasts: forecasts, category: "Temperature"} %>
	      <th data-field="temp-high" data-sortable="true">High</th>
	      <th data-field="temp-low" data-sortable="true">Low</th>
	      <th data-field="temp-avg" data-sortable="true">Average</th>
	    </tr>
	  </thead>
	  <tbody>
			<% forecasts.each do |mountain, forecast| %>
		    <tr class='temperature'>
		      <td><%= mountain %></td>
		      <% forecast.each_with_index do |day, index| %>
		      	<td><p><%= day.temp.day_temp %><small> F˚</small><%= index %></p></td>
	      	<% end %>
		      <td><%= Total.temp_high(forecast) %> F˚</td>
		      <td><%= Total.temp_low(forecast) %> F˚</td>
		      <td><%= Total.temp_avg(forecast) %> F˚</td>
		  	</tr>
			<% end %>
	  </tbody>
</table>
