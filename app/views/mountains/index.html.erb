<h1>Mountains in Colorado</h1>

<button class='show-snow'>Show Snow</button>
<button class='show-weather'>Show Weather</button>
<button class='show-temperature'>Show Temperature</button>
<button class='show-wind'>Show Wind</button>
<button class='show-all'>Show all</button>

	<table class="table table-bordered week1">
		<caption class='snow'>Snow Totals</caption>
		<caption class='weather'>Weather Totals</caption>
		<caption class='temperature'>Temperature Totals</caption>
		<caption class='wind'>Wind Totals</caption>
		<caption class='all'>All Mountains</caption>
<% @forecasts.each_with_index do |(mountain, forecast), index| %>
	  <thead>
	    <tr>
	    	<% if index < 1 %>
	      <th> Week 1</th>
	      <% forecast.each_with_index do |day, index| %>
	      	<% if index < 8 %>
	      	<th><%= day.day %></td>
	      	<% end %>
	      <% end %>
	      <th>High</th>
	      <th>Low</th>
	      <th>Total</th>
	      <th>Average</th>
	    </tr>
	  </thead>
	  <% end %>
	  <tbody>
	    <tr class='weather'>
	      <th><%= mountain %>: Weather</th>
	      <% forecast.each_with_index do |day, index| %>
	      	<% if index < 8 %>
	      	<td><%= image_tag "http://openweathermap.org/img/w/#{day.weather.icon}.png" %></td>
	      	<% end %>
	      <% end %>
	      <td>High</td>
	      <td>Low</td>
	      <td>Total</td>
	      <td>Average</td>
	    </tr>
	    <tr class='temperature'>
	      <th><%= mountain %>: Temperature</th>
	      <% forecast.each_with_index do |day, index| %>
	      <% if index < 8 %>
	      	<td><p>Day: <%= day.temp.day_temp %>F˚</p><p>Night: <%= day.temp.night_temp %>F˚</p></td>
	      <% end %>
	      <% end %>
	      <td>High</td>
	      <td>Low</td>
	      <td>Total</td>
	      <td>Average</td>
	    </tr>
	    <tr class='wind'>
	      <th><%= mountain %>: Wind</th>
	      <% forecast.each_with_index do |day, index| %>
	      <% if index < 8 %>
	      	<td><%= day.speed %> mi/h - <%= day.wind_dir %></td>
	      <% end %>
	      <% end %>
	      <td>High</td>
	      <td>Low</td>
	      <td>Total</td>
	      <td>Average</td>
	    </tr>
	    <tr class='snow'>
	      <th><%= mountain %>: Snow</th>
	      <% forecast.each_with_index do |day, index| %>
	      <% if index < 8 %>
	      	<td><%= day.snow %> %</td>
	      <% end %>
	      <% end %>
	      <td>High</td>
	      <td>Low</td>
	      <td>Total</td>
	      <td>Average</td>
	    </tr>
	  </tbody>
<% end %>
	</table>


