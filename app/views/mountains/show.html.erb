
<div class="page-header">
  <h1><%= @mountain.city %>  <small> <%= @mountain.state %>, <%= @mountain.country %> </small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Day</th>
      <th>Temp</th>
      <th>Pressure</th>
      <th>Humidity</th>
      <th>Weather</th>
      <th>Speed</th>
      <th>Wind Direction</th>
      <th>Clouds</th>
      <th>Snow</th>
    </tr>
  </thead>
  <tbody>

  	<% @forecasts.each do |forecast| %>
    <tr>
      <th scope="row"><%= forecast.day %></th>
      <td><%= forecast.temp %></td>
      <td><%= forecast.pressure %></td>
      <td><%= forecast.humidity %></td>
      <td><%= forecast.weather %></td>
      <td><%= forecast.speed %></td>
      <td><%= forecast.wind_dir %></td>
      <td><%= forecast.clouds %></td>
      <td><%= forecast.snow %></td>
    </tr>

    <% end %>
    
  </tbody>
</table>